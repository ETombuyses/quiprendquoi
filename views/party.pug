include ../partials/header.pug
script.
  party = !{JSON.stringify(party)}
h1 Qui prend quoi ?
h2(data-party-id=`${party._id}`)= party.name
h3 Créé par #{party.author}

div
  label(for="url") Partagez l'événement
  input(id="url" value=`${url}` data-clipboard=`${url}` data-share-url=`${url}` data-share-title=`${party.name}` data-share-text=`${party.author} vous invite a rejoindre l'événemen ${party.name}`)


ul.items
  each item in party.items
    li
      form(method="post" action=`/party/${party._id}/items/${item._id}`)
        p(data-user=`${item.user}` data-item=`${item.name}`)= `${item.name} - ${item.user}`
        button(type="submit" data-notify-item=`${item.name}` data-notify-user=`${item.user}`) Supprimer

form(method="post" action=`/party/${party._id}/items` class="partyForm")
  div(class="partyForm__input")
    label(for="name") Nom de l'item
    input(name="name" id="name" required minlength="3" placeholder="item")
  div(class="partyForm__input")
    label(for="user") Qui apporte l'item
    input(name="user" id="user" required minlength="3" placeholder="nom de la personne")
  button(type="submit" data-notify) Ajouter