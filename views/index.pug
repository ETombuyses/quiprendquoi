include ../partials/header.pug
h1 Qui prend quoi ?

h2 Créer un événement
form(method="post" action="/party" class=("partyForm"))
  div(class="partyForm__input")
    label(for="name") Nom de l'événement
    input(name="name" id="name" required minlength="3" placeholder="Nouvel an")
  div(class="partyForm__input")
    label(for="author") Auteur
    input(name="author" id="author" required minlength="3" placeholder="Auteur")
  div(class="partyForm__input")
    label(for="date") Date
    input(name="date" id="date" type="date" minlength="3" placeholder="Date")
  button(type="submit") Créer